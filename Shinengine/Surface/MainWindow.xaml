<Window x:Class="Shinengine.Surface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shinengine"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" Closed="Window_Closed" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid MouseMove="Grid_MouseMove" x:Name="BkGrid">
        <Image x:Name="BackGround" HorizontalAlignment="Left" Margin="0,0,0,0" Height="705" VerticalAlignment="Top" Width="1280" MouseUp="BackGround_MouseUp" Cursor="Arrow"/>
        <Button x:Name="StartButton" Style="{StaticResource BtnInfoStyle}" Content="Button" Width="104" Height="31" HorizontalAlignment="Left" Margin="101,0,0,0" VerticalAlignment="Top" Click="StartButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Surface/start_0.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
